doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    link(href=root + 'stylesheets/style.css', rel='stylesheet')
    link(href='//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css', rel='stylesheet')
    link(href=root + 'assets/css/highlight/okadia.css', rel='stylesheet')
    link(href=root + 'assets/css/theme.css', rel='stylesheet')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.5/jquery.bxslider.js')
    script.
      $(document).ready(function () {
        $('.page-head-slide').bxSlider({
          mode: 'fade',
          pause: 4000,
          speed: 1000,
          auto: true,
          controls: false,
          infiniteLoop: true,
          pagerCustom: '.page-head-slide-thum'
        });
      });
  body
    .aigis-container
      include sidemenu
      .aigis-contents
        .aigis-contents__body
          include components
          footer.aigis-footer Last update at #{timestamp}
